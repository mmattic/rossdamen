jQuery(document).ready(function($){var isSafari=/a/.__proto__=='//'||!!navigator.userAgent.match(/safari/i)&&!navigator.userAgent.match(/chrome/i)&&typeof document.body.style.webkitFilter!=="undefined"&&!window.chrome;var $slider=$('.site-header .hero-slider');if(isSafari&&$slider.length){var $container=$('.site-header');var resizeSlider=function(){$slider.height($container.height());};resizeSlider();$(window).resize(resizeSlider);}});